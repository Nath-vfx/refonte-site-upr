---
const { hook = "Ceci est une accroche", centered = false } = Astro.props;
---

<div class:list={["Heading", { centered: centered }]}>
    <span class="Heading__hook">{hook}</span>
    <h1 class="Heading__title"><slot /></h1>
</div>

<style lang="scss">
    .Heading {
        color: $main-color;
        display: flex;
        gap: 2rem;
        flex-direction: column;
        width: max-content;
        &__title {
            font-family: "Martel Sans";
            font-size: $xxl;
            font-weight: 900;
            text-transform: uppercase;
        }
        &__hook {
            display: inline-block;
            border-radius: 3rem;
            font-weight: 200;
            font-size: $md;
            width: max-content;
            position: relative;
            padding-left: 1.5rem;
            &::before {
                content: "";
                position: absolute;
                width: 1rem;
                height: 1rem;
                background-color: $main-color;
                border-radius: 50%;
                top: 50%;
                left: 0;
                z-index: -1;
                transform: translateY(-50%);
            }
        }
    }

    .centered {
        text-align: center;
        align-items: center;
        margin: auto;
    }
</style>
