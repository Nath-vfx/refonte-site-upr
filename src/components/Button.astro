---
const { link, light = false, border = false, background = true } = Astro.props;
---

<a href={link}>
    <button
        class:list={[
            "Button",
            { light: light },
            { dark: !light },
            { bordered: border },
            { background: background },
        ]}><slot /></button
    ></a
>

<style lang="scss">
    a {
        width: max-content;
    }
    .Button {
        font-family: "Open sans", sans-serif;
        font-size: $lg;
        font-weight: bold;
        border: none;
        padding: 1rem 3rem;
        border-radius: 2rem;
        cursor: pointer;
        background-color: transparent;
    }

    .light {
        color: $main-color;
    }

    .dark {
        color: white;
    }

    .background.light {
        background: white;
    }

    .background.dark {
        background: $main-color;
    }

    .dark.bordered {
        border: 1px solid white !important;
    }

    .light.bordered {
        border: 1px solid $main-color !important;
    }
</style>
